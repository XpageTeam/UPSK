.main-call

	&__cont
		position: relative

		.main-left-decor
			background: #fafafa

	.form__submit

		.default-btn
			padding: var(--input-focus-padding)

		&-text
			max-width: 320px

@media (max-width: 1700px) and (min-width: 1300px)
	.main-call__cont
		padding-left: 60px

@media (max-width: 1300px) and (min-width: 660px)
	.main-call__cont
		padding-left: 35px


@media (max-width: 660px)
	.main-call

		&__cont
			padding-left: 0